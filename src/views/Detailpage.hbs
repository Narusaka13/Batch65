            <li class="nav-item">
              <a
                class="nav-link"
                onclick="navigateTo('home')"
                aria-current="page"
                href="#"
              >Home</a>
            </li>
            <li class="nav-item">
              <a
                class="nav-link active"
                onclick="navigateTo('projects')"
                href="#"
              >My Project</a>
            </li>
