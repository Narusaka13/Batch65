          <form class="d-flex" role="search">
            <!-- <input
                    class="form-control me-2"
                    type="search"
                    placeholder="Search"
                    aria-label="Search"
                  /> -->
            <button
              type="button"
              class="btn btn-outline-success"
              onclick="navigateTo('contact')"
            >
              Contact Me!!
            </button>
          </form>
        </div>
      </div>
    </nav>
    <div class="p-3"></div>

    <main class="container" id="container">
      <h1 class="text-center fw-bolder fs-2 mb-3" id="projectName">
        {{project.projectname}}
      </h1>
      <div class="main-container p-3 shadow-lg w-75 mx-auto">
        <div class="card-body">
          <!-- Top Content -->
          <div class="d-flex gap-4 align-items-start mb-4">
            <!-- Image -->
            <div class="mb-3 mb-md-0 imgd">
              <img
                id="image"
                src="../assets/Uploads/projects/temp/{{project.image}}"
                alt="{{project.projectname}}"
                width="380px"
                class="rounded card-img-top"
              />
            </div>

            <!-- Content -->
            <div class="pt-2">
              <h5 class="fw-semibold mb-2">Duration</h5>
              <p class="text-muted mb-3 d-flex align-items-center gap-2">
                <i data-lucide="calendar" class="icon"></i>
                <span id="date">{{project.formattedStartDate}}
                  -
                  {{project.formattedEndDate}}</span>
              </p>
              <p class="text-muted mb-3">
                <strong>Duration:</strong>
                {{project.duration}}
                days
              </p>
              <h5 class="fw-semibold mb-2">Technologies</h5>
              <div id="technologies">
                {{#each project.technologies}}
                  <span class="badge bg-success me-1">{{this}}</span>
                {{/each}}
              </div>
            </div>
          </div>

          <!-- Description -->
          <div>
            <h5 class="fw-semibold mb-2">Description</h5>
            <p class="text-muted mb-4" id="description">
              {{project.desc}}
            </p>

            <a
              class="btn btn-success"
              onclick="navigateTo('projects')"
              href="#"
            >
              Back
            </a>
          </div>
        </div>
      </div>
    </main>
    <footer class="text-center fw-bold">Narusaka@2026</footer>
