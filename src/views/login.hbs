    <div class="contact-container">
      <!-- Contact Form Card -->
      <div class="main-container p-3 w-75">
        <!-- Page Header -->
        <div class="contact-header w-100 text-center mb-3">
          <h1 class="fw-bolder">LOGIN</h1>
          {{#if message}}
            <p style="color: red;">{{message}}</p>
          {{/if}}
          <p class="contact-subtitle">
            Please fill out the form below to contact me in :
            {{phoneNumber}}
          </p>
        </div>

        <!-- Contact Form -->
        <form
          action="/login"
          method="post"
          id="contactForm"
          class="contact-form w-100"
        >
          <!-- Email Field -->
          <div class="form-field mb-3">
            <label for="email" class="form-label">Email</label>
            <div class="mb-3">
              <div>
                <input
                  type="email"
                  name="email"
                  class="form-control"
                  id="elmail"
                  placeholder="Enter your email"
                />
              </div>
            </div>
          </div>

          <!-- Password Field -->
          <div class="mb-3 form-field">
            <label for="Password" class="form-label">Password</label>
            <div>
              <input
                type="password"
                name="password"
                class="form-control"
                id="password"
                placeholder="Enter your password"
              />
            </div>
          </div>
          <!-- Submit Button -->
          <div class="form-submit text-center">
            <button type="submit" class="submit-btn btn btn-primary">
              LOGIN
            </button>
          </div>
        </form>
      </div>
