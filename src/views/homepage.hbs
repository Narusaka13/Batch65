    {{#if activeUser}}
      <div class="main-container col w-75"><h1>Welcome
          {{activeUser.name}}
        </h1>
        <h1>@{{activeUser.email}}</h1>
      </div>
    {{/if}}

    <div class="main-container col w-75">
      <div class="row intro w-50">
        <h1><b>Rise and Shine!!! Narusaka Here!!!</b></h1>
        <p>
          Lorem ipsum dolor sit amet consectetur adipisicing elit. Enim odit,
          temporibus harum esse quisquam nam repellat minima tempora voluptatum
          fuga. Lorem ipsum dolor sit amet consectetur adipisicing elit. Ipsum,
          possimus necessitatibus! Perspiciatis aliquam, earum ipsam cum, labore
          accusantium odio excepturi quidem dolore porro iste at? Odit quisquam
          officiis aut ipsam.
        </p>
        <a href="/Contactpage/2" class="contact">CONTACT</a>
        {{#each result.rows}}
          <p>{{this.firstName}}
            {{this.firstName}}
            :
            {{this.E-mail}}<a
              href="/Contactpage/{{this.id}}"
              class="contact"
            >CONTACT</a></p>
        {{/each}}
        {{#if activeUser}}
          <form action="/logout" method="post"><button
              type="submit"
              class="contact"
            ><span>LOG-OUT</span></button></form>
        {{else}}
          <a href="/login" class="contact">LOGIN</a>
          <a href="/register" class="contact">REGISTER</a>
        {{/if}}
        <a href="#" class="cv"><span>DOWNLOAD CV</span><i
            class="fa-sharp fa-solid fa-download"
            style="color: #000000"
          ></i></a>
        <div class="socials">
          <i
            class="fa-brands fa-xl fa-square-linkedin"
            style="color: #000000"
          ></i>
          <i class="fa-brands fa-xl fa-instagram" style="color: #000000"></i>
          <i
            class="fa-brands fa-xl fa-square-facebook"
            style="color: #000000"
          ></i>
          <i
            class="fa-brands fa-xl fa-square-x-twitter"
            style="color: #000000"
          ></i>
        </div>
      </div>
      <div class="row card mb-5">
        <div class="card-img">
          {{#if activeUser}}
            <img
              class="card-img-top"
              src="../assets/Uploads/Pic/{{activeUser.profile}}"
              alt="Frofile"
            />
          {{else}}<img
              class="card-img-top"
              src="https://eu4.paradoxwikis.com/images/3/37/Egypt.png"
              alt="Frofile"
            />
          {{/if}}
        </div>
        <div class="card-body text-center">
          {{#if activeUser}}
            <h1>{{activeUser.name}}</h1>
            <p class="card-text">{{activeUser.email}}</p>
          {{else}}
            <h1>Narusaka Jun</h1>
            <p class="card-text">Software Engineer</p>
          {{/if}}
        </div>
      </div>
    </div>
    <footer class="text-center fw-bold">Narusaka@2026</footer>

