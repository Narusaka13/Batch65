    {{#if message}}
      <div class="alert alert-danger alert-dismissible fade show" role="alert">
        {{message}}
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="alert"
          aria-label="Close"
        ></button>
      </div>
    {{/if}}

    {{#if success}}
      <div class="alert alert-success alert-dismissible fade show" role="alert">
        {{success}}
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="alert"
          aria-label="Close"
        ></button>
      </div>
    {{/if}}
    <div class="main-container col w-75 p-4">
      <div class="contact-header w-100 text-center mb-3">
        <h1 class="fw-bolder">
          {{#if isEditMode}}
            EDIT MY PROJECT
          {{else}}
            ADD MY PROJECT
          {{/if}}
        </h1>
        <p id="input-user">
          {{#if isEditMode}}
            Please fill out the form below to update project
          {{else}}
            Please fill out the form below to add new project
          {{/if}}
        </p>
      </div>
      <form
        class="form-field w-100 mb-3"
        id="addproject"
        action="{{#if isEditMode}}/projects/update/{{editProject.id}}{{else}}/projects{{/if}}"
        method="post"
        enctype="multipart/form-data"
      >
        <!-- ProjectName -->
        <div class="mb-3">
          <label for="ProjectName" class="form-label">Project Name</label>
          <input
            type="text"
            class="form-control"
            id="ProjectName"
            name="projectname"
            placeholder="Enter project name"
            value="{{editProject.projectname}}"
            required
          />
        </div>
        <!-- date-range -->
        <div class="row mb-3">
          <div class="col">
            <label for="start-date" class="form-label">Start Date</label>
            <input
              type="date"
              id="start-date"
              name="start"
              class="form-control"
              value="{{editProject.start}}"
              required
            />
          </div>
          <div class="col">
            <label for="end-date" class="form-label">End Date</label>
            <input
              type="date"
              id="end-date"
              name="end"
              class="form-control"
              value="{{editProject.end}}"
              required
            />
          </div>
        </div>
        <!-- projects description -->
        <div class="mb-3">
          <label for="description" class="form-label">Description</label>
          <textarea
            id="description"
            class="form-control"
            name="desc"
            rows="5"
            placeholder="Describe your project here..."
            required
          >{{editProject.desc}}</textarea>
        </div>
        <!-- Technologies(Checklist) -->
        <div class="mb-3">
          <label for="technologies" class="form-label">Technologies</label>
          <div class="row d-flex">
            <!-- nodejs -->
            <div class="col-lg-3 col-md-6">
              <div class="form-check">
                <input
                  class="form-check-input"
                  type="checkbox"
                  value="Node Js"
                  id="nodejscheck"
                  name="technologies"
                  {{#if (includes editProject.technologies "Node Js")}}checked{{/if}}
                />
                <label class="form-check-label" for="defaultCheck1">
                  Node Js
                </label>
              </div>
            </div>
            <!-- reactjs -->
            <div class="col-lg-3 col-md-6">
              <div class="form-check">
                <input
                  class="form-check-input"
                  type="checkbox"
                  value="React Js"
                  id="reactjscheck"
                  name="technologies"
                  {{#if (includes editProject.technologies "React Js")}}checked{{/if}}
                />
                <label class="form-check-label" for="checkDefault">
                  React Js
                </label>
              </div>
            </div>
            <!-- NextJS -->
            <div class="col-lg-3 col-md-6">
              <div class="form-check">
                <input
                  class="form-check-input"
                  type="checkbox"
                  value="Next Js"
                  id="nextjscheck"
                  name="technologies"
                  {{#if (includes editProject.technologies "Next Js")}}checked{{/if}}
                />
                <label class="form-check-label" for="checkChecked">
                  Next Js
                </label>
              </div>
            </div>
            <!-- TypeScript -->
            <div class="col-lg-3 col-md-6">
              <div class="form-check">
                <input
                  class="form-check-input"
                  type="checkbox"
                  value="TypeScript"
                  id="typescriptcheck"
                  name="technologies"
                  {{#if (includes editProject.technologies "TypeScript")}}checked{{/if}}
                />
                <label class="form-check-label" for="checkChecked">
                  TypeScript
                </label>
              </div>
            </div>
          </div>
        </div>
        <!-- Upload Image -->
        <div class="mb-3">
          <label for="image-upload" class="form-label">Uploaded Image</label>
          {{#if isEditMode}}
          <div class="mb-2">
          <img src="/assets/Uploads/projects/temp/{{editProject.image}}" 
               alt="Current" style="max-width: 100px; max-height: 100px;">
          <small class="text-muted d-block">Current image (Upload new to replace)</small>
        </div>
      {{/if}}
          <input
            class="form-control input-group-text"
            type="file"
            id="upload-area"
            name="image"
            single
          />
        </div>
        <!-- Submit Button -->
        <div class="form-submit text-center mb-3">
          <button type="submit" class="submit-btn btn btn-primary">
            {{#if isEditMode}}Update Project{{else}}Submit{{/if}}
          </button>
          <!-- Cancel button - only show in edit mode -->
      {{#if isEditMode}}
        <a href="/projects" class="btn btn-secondary ms-2">Cancel</a>
      {{/if}}
        </div>
      </form>
    </div>
    <!-- My Project -->
    <div class="main-container row w-75 p-3">
      <h1 class="fw-bolder col-12 text-center">MY PROJECT</h1>
      <!-- Filter and Sort Section -->
      <div class="filter-sort-section mb-4 p-3 bg-light rounded">
        <div class="row g-3 align-items-center">
          <!-- Search Column -->
          <div class="col-md-4 col-lg-3">
            <input
              type="text"
              id="searchInput"
              class="form-control form-control-sm"
              placeholder="Search projects..."
            />
          </div>

          <!-- Filter Column -->
          <div class="col-md-4 col-lg-5">
            <div class="input-group input-group-sm justify-content-center">
              <div class="d-flex flex-wrap gap-1 p-1 bg-white rounded">
                <button
                  class="btn btn-sm btn-success filter-btn px-2 py-1"
                  data-tech="all"
                >
                  All
                </button>
                <button
                  class="btn btn-sm btn-outline-secondary filter-btn px-2 py-1"
                  data-tech="node js"
                >
                  Node Js
                </button>
                <button
                  class="btn btn-sm btn-outline-secondary filter-btn px-2 py-1"
                  data-tech="react js"
                >
                  React Js
                </button>
                <button
                  class="btn btn-sm btn-outline-secondary filter-btn px-2 py-1"
                  data-tech="next js"
                >
                  Next Js
                </button>
                <button
                  class="btn btn-sm btn-outline-secondary filter-btn px-2 py-1"
                  data-tech="typescript"
                >
                  TypeScript
                </button>
              </div>
            </div>
          </div>

          <!-- Sort Column -->
          <div class="col-md-4 col-lg-4">
            <div class="row g-2 justify-content-center">
              <div class="col-auto">
                <select
                  class="form-select form-select-sm"
                  id="sortField"
                  onchange="updateSorting(this.value, sortOrder)"
                >
                  <option value="name">Sort by Name</option>
                  <option value="startDate">Sort by Start Date</option>
                  <option value="endDate">Sort by End Date</option>
                </select>
              </div>
              <div class="col-auto">
                <select
                  class="form-select form-select-sm"
                  id="sortOrder"
                  onchange="updateSorting(sortField, this.value)"
                >
                  <option value="asc">A-Z</option>
                  <option value="desc">Z-A</option>
                </select>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div id="userlist" class="row gap-3 justify-content-center">
        <div
          class="card Project col-md-6 col-lg-4 shadow-lg cursor-pointer"
          data-placeholder="true"
          style="max-width: 19rem"
        >
          <div onclick="navigateTo('detail', -1)" class="text-decoration-none">
            <img
              src="https://placehold.co/600x400/black/turquoise?text=Project+Image"
              class="card-img-top"
              alt="Placeholder"
              style="height: 200px; object-fit: cover"
            />
            <div class="card-body">
              <h5 class="card-title text-truncate">Dumbways Web</h5>
              <p class="card-text fw-lighter fs-6 mb-2">
                2026-01-26 → 2026-02-01
              </p>
              <p class="card-text fw-light mb-2">
                <span class="badge bg-success me-1">Node Js</span>
                <span class="badge bg-success me-1">React Js</span>
              </p>
              <p class="card-text text-truncate">
                Lorem ipsum dolor, sit amet consectetur adipisicing elit...
              </p>
            </div>
          </div>
          <div class="d-flex justify-content-end gap-2">
            <button onclick="editProject(-1)" class="btn btn-warning btn-sm">
              Edit
            </button>
            <button
              onclick="confirmDelete(-1, 'Dumbways Web')"
              class="btn btn-outline-danger btn-sm"
            >
              Delete
            </button>
          </div>
        </div>
        {{#each projects}}
          <div
            class="card Project col-md-6 col-lg-4 shadow-lg cursor-pointer"
            data-placeholder="true"
            style="max-width: 19rem"
          >
            <div
              onclick="navigateTo('detail',{{this.id}})"
              class="text-decoration-none"
            >
              <img
                src="/assets/Uploads/projects/temp/{{this.image}}"
                class="card-img-top"
                alt="{{this.projectname}}"
                style="height: 200px; object-fit: cover"
              />
              <div class="card-body">
                <h5 class="card-title text-truncate">{{this.projectname}}</h5>
                <p class="card-text fw-lighter fs-6 mb-2">
                  {{this.start}}
                  →
                  {{this.end}}
                </p>
                <p class="card-text fw-light mb-2">
                  {{#each this.technologies}}
                    <span class="badge bg-success me-1">{{this}}</span>
                  {{/each}}
                </p>
                <p class="card-text text-truncate">
                  {{this.desc}}
                </p>
              </div>
            </div>
            <div class="d-flex justify-content-end gap-2">
              <form action="/projects/edit/{{this.id}}" method="GET">
              <button
                  type="submit" 
                  class="btn btn-warning btn-sm"
                >
                  Edit
                </button>
              </form>
              <form
                action="/projects/delete/{{this.id}}"
                method="POST"
                onsubmit="return confirm('Are you sure you want to delete {{this.projectname}}?')"
              >
                <button
                  type="submit"
                  {{!-- onclick="confirmDelete({{this.id}}, '{{this.projectname}}')" --}}
                  class="btn btn-outline-danger btn-sm"
                >
                  Delete
                </button>
              </form>
            </div>
          </div>
        {{/each}}
      </div>
    </div>
    <footer class="text-center fw-bold">Narusaka@2026</footer>
